doctype html
html
    head
        title My Portfolio
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src='https://code.jquery.com/jquery-3.6.0.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs Typed.js/2.0.12/typed.min.js')
        script.
            $(document).ready(function(){
                var options = {
                    strings: ["My Projects", "My Achievements", "About Me", "My Skills"],
                    typeSpeed: 50,
                    backSpeed: 25,
                    loop: true
                };
                var typed = new Typed("#typing-effect", options);
            });
    body
        h1 Welcome to My Portfolio

        // Typing animation for sections
        h2(id="projects") 
            span#typing-effect-projects 
                | My Projects 
        h2(id="achievements") 
            span#typing-effect-achievements 
                | My Achievements 
        h2(id="about-me") 
            span#typing-effect-about 
                | About Me 

        // About Me Section
        img(src='/images/my-photo.jpg', alt='My Photo', class='profile-photo')
        p This is a brief description about me.

        // Skills Section
        h2 Skills
        ul
            li JavaScript
            li Node.js
            li Express
            li MongoDB
            li HTML & CSS

        // Contact Section
        h2 Contact Me
        form(action='/contact', method='POST')
            label(for='name') Name:
            input(type='text', name='name', required=true)
            label(for='email') Email:
            input(type='email', name='email', required=true)
            label(for='message') Message:
            textarea(name='message', placeholder='Message')
            button(type='submit') Send
